<h2 class="center">Selected Checklist</h2>

<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title"><%= @checklist.title %></span>
                <p><%= @checklist.description %></p>
            </div>
        </div>
    </div>
</div> 

<h4 class="center">Questions for checklist</h4>

<% if @checklist.questions.any? %>
    <ul class="collection">
        <% @checklist.questions.each do |question| %>
            <li class="collection-item">
                <span class="title"><span class="strong">Title:</span> <%= question.title %></span>
                <p><span class="strong">Description:</span> <%= question.description %></p>
            </li>
        <% end %>
    </ul>
<% else %>
    <h3 class="center">non question</h3>
<% end %>

<% if user_signed_in? %>
    <%= link_to "Remove Checklist", checklist_path(@checklist), method: :delete, data: { confirm: "Are you sure?" }, class: "waves-effect waves-light btn" %>       
<% else %>
    <p></p>
<% end %>
