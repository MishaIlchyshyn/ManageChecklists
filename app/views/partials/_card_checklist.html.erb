<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <span class="card-title"><%= checklist.title %></span>
            <p><%= checklist.description %></p>
        </div>
        <div class="card-action checklist-action">
            <%= link_to "Show", checklist_path(checklist) %>
            <% if user_signed_in? %>
                <%= link_to '<i class="material-icons">delete</i>'.html_safe, checklist_path(checklist), method: :delete, data: { confirm: "Are you sure?" }, title: "delete" %>        
            <% else %>
                <p></p>
            <% end %>
        </div>
        </div>
    </div>
</div> 