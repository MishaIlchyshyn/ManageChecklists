<%= link_to "Checklists", checklists_path %>

<%= link_to 'Fill Checklist', fill_checklist_path,  
    {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} 
%>

<div id="modal-window" class="modal hide" role="dialog" 
    aria-labelledby="myModalLabel" aria-hidden="true">
</div>

<h1>Audits:</h1>

<% if @audits.any? %>
    <ul>
        <% @audits.each do |audit| %>
            <li>
                <%= audit.checklistname %>:
                <%= link_to "Edit" %>
                <%= link_to "Delete" %>
            </li>
        <% end %>
    </ul>
<% else %>
    <h3>No audits (</h3>
<% end %>

<%= will_paginate @audits, renderer: BootstrapPagination::Rails %>
